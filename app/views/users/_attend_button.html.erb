<% if (event.users.include? current_user ) %> 
  <%= link_to 'Unattend', unattend_path(event), method: :post, :class => 'btn btn-mini btn-danger', id: 'attend_button' %>
<% else %> 
  <%= link_to 'Attend', attend_path(event), method: :post, :class => 'btn btn-mini btn-primary', id: 'attend_button'  %>
<% end %> 