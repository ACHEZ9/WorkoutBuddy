<div class="col-sm-6 col-md-4" id="event_thumbnail">
  <%= link_to event_path(event) do %>
    <div class="thumbnail">
      <div class="caption center">
        <h4 style="position:relative;top:-10px;left:-70px;"><b><%= event.sport.name %></b></h4>
        <%= render 'icon', event: event %>
        <h5><%= event.date_time_display %></h5>
        <h5><%= event.location %></h5>
        <p><%= event.desc %></p>
        </br>
        <%= link_to 'Delete', delete_notification_users_path(id: event.id), method: :delete, class: 'btn btn-mini btn-danger' %>
      </div>
    </div>
  <% end %>
</div>
