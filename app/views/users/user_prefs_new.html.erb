<div class="container">
  <div class="row">
    <h1>New Event Notification</h1>
        <%= form_for @user_pref do |f| %>
          <%= f.hidden_field :user_id, value: params[:id] %>
        <div class="row">
          <div class="center col-md-8 col-md-offset-2">
            <h3>Select Sport</h3>
            <%= f.select(:sport_id, options_from_collection_for_select(Sport.all, :id, :name, @sport_default), include_blank: "Any", class: 'form-control') %>
            <h3>Select Days</h3>
            <div class="btn-group" data-toggle="buttons">
              <label class="btn btn-primary">
                <%= f.check_box :monday%>Mon
              </label>
              <label class="btn btn-primary">
                <%= f.check_box :tuesday%>Tues
              </label>
              <label class="btn btn-primary">
                <%= f.check_box :wednesday%>Wed
              </label>
              <label class="btn btn-primary">
                <%= f.check_box :thursday%>Thurs
              </label>
              <label class="btn btn-primary">
                <%= f.check_box :friday%>Fri
              </label>
              <label class="btn btn-primary">
                <%= f.check_box :saturday%>Sat
              </label>
              <label class="btn btn-primary">
                <%= f.check_box :sunday%>Sun
              </label>
            </div>
        </div>
        <div class="row">
          <div class="col-md-2 col-md-offset-4">
              <%= f.label :start_time %><br>
              <%= f.time_select :start_time, ampm: true, ignore_date: true, minute_step: 5%>
              <%= f.label :end_time %><br>
              <%= f.time_select :end_time, ampm: true, ignore_date: true, minute_step: 5%>
            </div>
          </div>
          
        </div>
        <div class="row">
          <div class="col-md-4 col-md-offset-5">
            <%= f.submit "Add Event Notification", class: 'btn btn-primary' %>
          </div>
        </div>
        <% end %>
  </div>
</div>