<h1>Notifications</h1>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Sport</th>
      <th>Days</th>
      <th>Start Time</th>
      <th>End Time</th>
    </tr>
  </thead>
  <tbody>
    <% @user.userPrefs.each do |pref| %>
      <tr>
        <td><%= pref.display_sport %></td>
        <td><%= pref.days %> </td>
        <td><%= pref.start_time.strftime("%I:%M%p") %></td>
        <td><%= pref.end_time.strftime("%I:%M%p") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="center">
  <%= link_to "Add New Event To Watch For", user_prefs_new_path, class: 'btn btn-primary' %>
</div>