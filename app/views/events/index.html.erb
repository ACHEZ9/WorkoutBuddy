<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <h1>Find Events</h1>

    <div class="form-group">
    <%= form_tag events_path, :method => 'get', :id => "events_search" do %>
      <div class="col-md-2">
        <label>Sport:</label>
        <%= select_tag(:sport_id, options_from_collection_for_select(Sport.all, :id, :name, @sport_default), include_blank: "Any", class: 'form-control') %>
      </div>
      <div class="col-md-2">
        <label>Within:</label>
        <%= select_tag(:distance,
          options_for_select([["Any", ""], ["1 Mile", "1"], ["5 Miles", "5"], ["10 Miles", "10"], ["25 Miles", "25"], ["50 Miles", "50"]], @distance_default), class: 'form-control') %>
      </div>
      <div class="col-md-6 col-md-offset-3">
        <%= submit_tag "Search", class: 'form-control' %>
      </div>
    <% end %>
    </div>
  </div>

  <div class="searchable" style="display:flex; flex-wrap: wrap;">
    <% @events.each do |event| %>
      <%= render 'card', event: event %>
    <% end %>
  </div>
</div>


<div class="center">
  <%= will_paginate @events, renderer: BootstrapPagination::Rails %>
</div>
