<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@event) do |f| %>
        <% if @event.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

            <ul>
            <% @event.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= f.label :name %><br>
          <%= f.text_field :name, class: "form-control"%>
        </div>
        <div class="field">
          <%= f.label :sport_id %><br>
          <%= f.select :name, options_from_collection_for_select(Sport.all, :id, :name), include_blank: true, class: "form-control"%>
        </div>
        <div class="field">
          <%= f.label :desc %><br>
          <%= f.text_area :desc, class: "form-control" %>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="field inline-select">
              <%= f.label :time %><br>
              <%= f.time_select :time, ampm: true, ignore_date: true, minute_step: 5%>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="field inline-select">
              <%= f.label :date %><br>
              <%= f.date_select :date, order: [:month, :day, :year], class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="field">
          <%= f.label :location %><br>
          <%= f.text_field :location, class: "form-control" %>
        </div>
        <div class="field">
          <%= f.label :image %><br>
          <%= f.text_area :image, class: "form-control" %>
        </div>
        <div class="actions">
          <%= f.submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>
